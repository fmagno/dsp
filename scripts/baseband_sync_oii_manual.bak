tb = gr_baseband_sync_oii(
    amplitude_calibration=1.,
    duration=duration,
    rx_ip='192.168.5.101',
    tx_ip='192.168.5.100',
    samp_rate=samp_rate,
    sig_in=sys.argv[1],
    sig_out_ch1=out1_name,
    sig_out_ch2=out2_name,
)
tb.start()
tb.wait()